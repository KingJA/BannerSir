<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AutoPager">
        <attr name="autopager_period" format="integer" />
        <attr name="autopager_autoRoll" format="boolean" />
        <attr name="autopager_unlimited" format="boolean" />

        <attr name="autopager_indicatorWidth" format="dimension" />
        <attr name="autopager_indicatorHeight" format="dimension" />
        <attr name="autopager_indicatorSpacing" format="dimension" />
        <attr name="autopager_indicatorMargin" format="dimension" />
        <attr name="autopager_indicatorMarginLeft" format="dimension" />
        <attr name="autopager_indicatorMarginTop" format="dimension" />
        <attr name="autopager_indicatorMarginRight" format="dimension" />
        <attr name="autopager_indicatorMarginBottom" format="dimension" />

        <attr name="autopager_indicatorDrawable" format="reference" />
        <attr name="autopager_indicatorGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
        </attr>
        <attr name="autopager_indexBarGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
        </attr>
        <attr name="autopager_indexBarMargin" format="dimension" />
        <attr name="autopager_indexBarMarginLeft" format="dimension" />
        <attr name="autopager_indexBarMarginTop" format="dimension" />
        <attr name="autopager_indexBarMarginRight" format="dimension" />
        <attr name="autopager_indexBarMarginBottom" format="dimension" />
    </declare-styleable>
</resources>